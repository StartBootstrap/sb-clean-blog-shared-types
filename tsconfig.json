{
    "compileOnSave": false,
    "compilerOptions": {
        "baseUrl": "src",
        "outDir": "dist",
        "sourceMap": true,
        "declaration": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "target": "es2015",
        "typeRoots": ["node_modules/@types", "src/typings"],
        "lib": ["es2018"],
        "strict": true
    },
    "exclude": ["node_modules", "dist", "_templates", "test"]
}
